generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GatePass {
  id               String         @id @default(uuid())
  userId           String
  leaveId          String         @unique
  reason           String
  fromDate         DateTime
  toDate           DateTime
  status           GatePassStatus @default(pending)
  department       String
  flowType         FlowType       @default(standard)
  gateOutAt        DateTime?
  gateInAt         DateTime?
  issuedById       String?
  verifiedOutById  String?        // security admin who approved exit
  verifiedInById   String?        // security admin who approved re-entry
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  user             User           @relation(fields: [userId], references: [id])
  verifiedOutBy    User?          @relation("VerifiedOutBy", fields: [verifiedOutById], references: [id])
  verifiedInBy     User?          @relation("VerifiedInBy", fields: [verifiedInById], references: [id])
  leave            LeaveRequest   @relation(fields: [leaveId], references: [id])
}

enum GatePassStatus {
  pending
  issued
  rejected
  expired
}


enum FlowType {
  standard
  hostel_direct
}

