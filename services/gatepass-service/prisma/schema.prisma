generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GatePass {
  id          String     @id @default(uuid())
  leaveId     String     @unique
  issuedAt    DateTime   @default(now())
  validUntil  DateTime
  gateOutAt   DateTime?
  gateInAt    DateTime?
  status      String     @default("active") // active, used, expired
  workflowType String    // standard, hostel_direct
  
  leave       LeaveRequest @relation(fields: [leaveId], references: [id])
}

model LeaveRequest {
  id        String     @id @default(uuid())
  status    String
  userId    String
  gatePass  GatePass?
}

