generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Leave {
  id           String      @id @default(uuid())
  reason       String
  fromDate     DateTime
  toDate       DateTime
  status       LeaveStatus @default(pending)
  userId       String
  department   String
  currentStage String
  flowType     FlowType    @default(standard)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

enum LeaveStatus {
  pending
  forwarded
  approved
  rejected
}

enum FlowType {
  standard
  hostel_direct
}
